            Descuento: <h2 id="descuento"></h2><br>
            <br>
            <input type="submit" class="login" value="Buscar">
        </form>
    </div>
</div>
<script>
    function getDescuento() {
    const hashInput = document.querySelector('input[name="hash"]');
    const descuentoElement = document.getElementById('descuento');

    fetch('/hash/getDesc', {
        method: 'POST',
        headers: {
        'Content-Type': 'application/json'
        },
        body: JSON.stringify({ hash: hashInput.value })
    })
    .then(response => response.json())
    .then(data => {
        if (data.descuento) {
        descuentoElement.textContent = data.descuento;
        } else {
        descuentoElement.textContent = 'Descuento no encontrado.';
        }
    })
    .catch(error => {
        console.error('Error:', error);
        descuentoElement.textContent = 'Error al obtener el descuento.';
    });
    }
</script>

